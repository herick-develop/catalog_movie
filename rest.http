@baseUrl = http://localhost:3000

@idMovie = {{ createMovie.response.body.id }}

@acessToken = {{ login.response.body.access_token }}

###

# @name login
POST {{baseUrl}}/auth/login
Content-Type: application/json

{
  "username": "john",
